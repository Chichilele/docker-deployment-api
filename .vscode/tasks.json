{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "dockerdeploymentapi:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"env": {
					"FLASK_APP": "app.py",
					"FLASK_ENV": "development"
				},
				"volumes": [
					{
						"containerPath": "/app",
						"localPath": "${workspaceFolder}"
					}
				]
			},
			"python": {
				"args": [
					"run",
					// "--no-debugger",
					// "--no-reload",
					"--host",
					"0.0.0.0",
					"--port",
					"5000"
				],
				"module": "flask"
			}
		},
		{
			"label": "Run docker-compose up",
			"type": "docker-compose",
			"dockerCompose": {
				"up": {
					"detached": true,
					"build": true,
					"services": [
						"api"
					]
				},
				"files": [
					"${workspaceFolder}/docker-compose.debug.yml"
				],
			}
		},
		{
			"label": "Deploy api",
			"type": "shell",
			"command": "make debug",
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		}
	]
}